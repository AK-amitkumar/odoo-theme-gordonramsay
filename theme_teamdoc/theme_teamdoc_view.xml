    <!-- Header Logo Transform -->
    <template id="logo header" inherit_id="website.layout" customize_show="True" active="False" name="Header Logo Transform">
        <xpath expr="//body/div" position="before">
            <div id="logo-header" class="nav-top clearfix">
                <div class="logo" align="center">
                    <img src="/logo.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                </div>
            </div>
        </xpath>    
    </template>

           
    <!-- TRANSPARENT NAVBAR -->        
    <template id="transparent navbar" inherit_id="website.layout" customize_show="True" active="False" name="Transparent Navbar">
       <xpath expr="//body/div/header/div" position="attributes">
            <attribute name="id">custom-nav</attribute>
            <attribute name="class">navbar navbar-default navbar-fixed-top</attribute>
        </xpath> 
        
        <xpath expr="//header//a[@class='navbar-brand'] | //header//a[@class='navbar-brand logo']" position="replace">
        <a href="/" class="navbar-brand logo hidden">
            <img src="/logo.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
        </a>
        </xpath>
               
    </template>
    
